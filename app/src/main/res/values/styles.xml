<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTitle" parent="android:Widget.TextView">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTitle.TextItemTitle" >
        <item name="android:textSize">@dimen/font_xsmall</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="BaseTitle.TextItemText" >
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>
</resources>
